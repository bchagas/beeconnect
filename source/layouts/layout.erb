<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "iShop" %></title>

    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag  "application", "page-transition" %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <div class="content">
        <h1 class="logo"><%= link_to image_tag("logo.png"), "/" %></h1>
        <nav>
          <%= partial "partials/menu" %>
        </nav>
      </div>
    </header>

    <main class="ishop">
      <%= yield %>
    </main>

    <footer>
      <h1><%= link_to image_tag("logo-color.png"), "/" %></h1>
      <%= partial "partials/menu" %>

      <ul class="social">
        <% ["Facebook", "Twitter"].each do |social| %>
          <%= content_tag :li, link_to(social, social.parameterize) %>
        <% end %>
      </ul>

      <ul class="app-rules">
        <li><%= link_to "Termos de uso", ""%></li>
        <li><%= link_to "Privacidade", ""%></li>
      </ul>

      <p class="copyright">&copy; Copyright iShop | All rights reserved</p>
    </footer>

    <script>
      $(document).ready(function() {
        iShop.setPageTransition(".ishop, body");
      });
    </script>
  </body>
</html>
